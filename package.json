{
  "name": "copilot-lens",
  "displayName": "Copilot Lens",
  "description": "Visualize your GitHub Copilot agents, skills, and handoffs as an interactive graph. Parses chat sessions to surface usage metrics.",
  "version": "0.0.7",
  "publisher": "23min",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/23min/copilot-lens"
  },
  "homepage": "https://github.com/23min/copilot-lens#readme",
  "bugs": {
    "url": "https://github.com/23min/copilot-lens/issues"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Visualization"
  ],
  "activationEvents": [
    "workspaceContains:**/.github/agents/*.agent.md",
    "workspaceContains:**/.github/skills/*/SKILL.md"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilotLens.showGraph",
        "title": "Copilot Lens: Show Agent Graph"
      },
      {
        "command": "copilotLens.refresh",
        "title": "Copilot Lens: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "copilotLens.openMetrics",
        "title": "Copilot Lens: Show Metrics Dashboard"
      },
      {
        "command": "copilotLens.openSession",
        "title": "Copilot Lens: Session Explorer"
      },
      {
        "command": "copilotLens.openContainerSetup",
        "title": "Copilot Lens: Container Setup Guide"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "copilot-lens",
          "title": "Copilot Lens",
          "icon": "$(telescope)"
        }
      ]
    },
    "views": {
      "copilot-lens": [
        {
          "id": "copilotLens.treeView",
          "name": "Agents & Skills"
        }
      ]
    },
    "configuration": {
      "title": "Copilot Lens",
      "properties": {
        "copilotLens.sessionDir": {
          "type": "string",
          "default": "",
          "markdownDescription": "Path to a directory containing Copilot chat session files (`.jsonl`). Can be a `chatSessions/` directory or a `workspaceStorage/` root (scanned automatically). Useful in devcontainers where sessions live on the host — mount the host's `workspaceStorage` and point this setting to the mount path."
        },
        "copilotLens.claudeDir": {
          "type": "string",
          "default": "",
          "markdownDescription": "Path to a directory containing Claude Code session files. Should point to the `projects/` directory (or a specific project directory). Useful in devcontainers where `~/.claude` lives on the host — mount it and point this setting to the mount path."
        }
      }
    },
    "viewsWelcome": [
      {
        "view": "copilotLens.treeView",
        "contents": "You're in a remote environment and no sessions were found.\n\nSession data lives on your host machine and needs to be mounted into this container.\n\n[Open Container Setup Guide](command:copilotLens.openContainerSetup)",
        "when": "copilotLens.isRemoteNoSessions"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "copilotLens.refresh",
          "when": "view == copilotLens.treeView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "build": "npm run build:ext && npm run build:webview",
    "build:ext": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "build:webview": "esbuild webview/graph.ts webview/metrics.ts webview/session.ts webview/setup.ts --bundle --outdir=out/webview --format=esm --platform=browser",
    "watch": "npm run build:ext -- --watch --sourcemap & npm run build:webview -- --watch --sourcemap",
    "test": "vitest run",
    "test:watch": "vitest",
    "package": "npx @vscode/vsce package"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.100.0",
    "esbuild": "^0.25.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "d3": "^7.9.0",
    "js-yaml": "^4.1.1",
    "lit": "^3.3.2"
  }
}
